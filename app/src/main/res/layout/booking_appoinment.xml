<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/doctor_booking_details"
    android:background="@drawable/d_background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/table"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bookingdoctor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/doctors_appoinment" />

            <TextView
                android:id="@+id/booking_doctorName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                android:layout_weight="4"
                android:text="Dr. Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_doctorSpecialist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="specilist" />

            <TextView
                android:id="@+id/booking_doctorLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="location" />

            <Spinner
                android:id="@+id/booking_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/booking_doctorDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="location" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_appoinment_booking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BOOK APPOINMENT" />



            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
