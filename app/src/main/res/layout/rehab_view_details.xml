<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rehab_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Rehab id:" />

            <TextView
                android:id="@+id/rehab_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rehab Name :" />

            <TextView
                android:id="@+id/rehab_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rehab Description :" />

            <TextView
                android:id="@+id/rehab_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rehab Number:" />

            <TextView
                android:id="@+id/re_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location :" />
            <TextView
                android:id="@+id/re_latlong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lat_Long :" />
            <TextView
                android:id="@+id/re_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help Line :" />

            <RatingBar
                android:id="@+id/rehab_ratingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rehab_map"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="View Map" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
